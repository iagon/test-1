
<h2>Edit Post</h2>
<%= form_for @post do |f| %>

  <% if @post.errors.any? %>
      <div id="errors">
          <ul>
            <% @post.errors.full_messages.each do  |msg| %>
                <li><%= msg %></li>
              <% end %>
          </ul>
      </div>
    <%end%>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %>
    <%= f.text_field :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>

<%end%>